if note
	h1 Edit Note
else
	h1 New Note

	// this whole thing depends on whether there is some data coming back from the controller
	// we are sending nothing when we are just going to url new-note. BUT if we are going to new-note/ id/ edit......in the controller we are returing a data object from the database, so wherever we need note in here, these things are true


-	var item = note || {title: '', text: ''}
-	var override = note ? '/' + note._id + '?_method=PUT' : ''

form(method="POST", action='/notes#{override}')
	.input-group
		label(for='title') Title
		input#title(type='text', name='title', placeholder='Enter Text', value='#{item.title}')
	.input-group
		label(for='text') Text
		textarea#text(name='text')= item.text
	.input-group
		label(for='cat') Category
		select#cat(name='category')
			for cat in categories
				option(value=cat._id)= cat.name
	.input-group
		input(type='submit', value='save')





